<Window x:Class="KLS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard Layout Switcher" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Associer une application à un layout clavier" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <ListBox x:Name="LayoutsListBox" Width="300" Height="300" DisplayMemberPath="DisplayName" Margin="0,0,10,0"/>
            <ListBox x:Name="AppsListBox" Width="300" Height="300" DisplayMemberPath="ProcessName"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AssociateButton" Content="Associer" Width="100" Margin="0,0,10,0"/>
            <ListBox x:Name="AssociationsListBox" Width="400" Height="100" SelectionMode="Single"/>
            <Button x:Name="EditAssociationButton" Content="Modifier" Width="100" Margin="10,0,0,0"/>
            <Button x:Name="DeleteAssociationButton" Content="Supprimer" Width="100" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="TestLayoutButton" Content="Tester le layout sélectionné" Width="200" Margin="0,0,10,0"/>
        </StackPanel>

        <TextBlock Grid.Row="3" x:Name="StatusText" FontSize="12" Foreground="DarkGreen"/>
    </Grid>
</Window>
